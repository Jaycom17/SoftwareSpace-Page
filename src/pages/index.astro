---
import MainLayout from '../layouts/main-layout.astro'
import Button from '../components/button.tsx'
import ArrowSec from '../icons/arrow-sec.tsx'
import CallIcon from "../icons/call.tsx"
import Experience from '../components/experience.tsx'


const services = [
	{
		title: 'Software a medida',
		text: 'Desarrollamos software a medida para tu empresa, con las ultimas tecnologias y las mejores practicas.'
	},
	{
		title: 'Paginas Web',
		text: 'Desarrollamos paginas web a medida, con las ultimas tecnologias y las mejores practicas.'
	},
	{
		title: 'Software como servicio',
		text: 'Desarrollamos software como servicio, con las ultimas tecnologias y las mejores practicas.'
	},
]

const projects = [
	{
		img: '/project1.png',
		name: 'EvalUnicauca',
		text: 'Sitio web para la evaluacion de docentes de la universidad del cauca.',
		link: "https://github.com/Jaycom17/app-autoevaluaciones"
	},
	{
		img: '/project2.jpg',
		name: 'Webscraping con NodeJS',
		text: 'API que realiza webscraping a mercadolibre.',
		link: "https://github.com/Jaycom17/scraping-store"
	},
	{
		img: '/project3.png',
		name: 'Componente de ReactJS',
		text: 'react-card-profile es un componente de react que permite mostrar una tarjeta de perfil.',
		link: "https://github.com/Jaycom17/react-card-profile"
	},
	{
		img: '/project2.jpg',
		name: 'Music API',
		text: 'API que permite las operaciones CRUD para canciones, relizando webscraping a youtube.',
		link: "https://github.com/Jaycom17/node-express-songs-api"
	},
]


---

<MainLayout title = 'SoftwareSpace'>

	<!-- Banner -->
	
	<section class="w-full h-[30rem] bg-hero bg-no-repeat bg-cover lg:min-h-[30rem] px-12 xl:px-0 flex items-center ">
		<div class="lg:max-w-[1200px] w-full mx-auto flex flex-col">
			<h1 class="text-[40px] leading-[50px] md:text-[60px] xl:text-[85px] pb-4 font-dm md:leading-[106.25px] w-full xl:max-w-[50%] text-white">SoftwareSpace</h1>
			<p class="text-base md:text-[22px] pb-5 font-jost text-primary-400 w-full lg:max-w-[50%]">Traemos el poder del espacio directamente a tu maquina.</p>
			<a class="ease-in-out duration-300 hover:scale-[1.01]" href="/contact">
				<Button text="Volemos juntos"/>
			</a>
		</div>
	</section>

	<!-- Services Section -->

	<section class="lg:max-w-[1200px] flex flex-col gap-8 lg:gap-10 lg:flex-row px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[75px] justify-between ">
		{
			services.map((service) => {
				return (
					<div class="w-full max-w-[358px] mx-auto flex flex-col justify-center items-center gap-3 md:gap-5">
						<h3 class="text-text-blue font-dm text-[22px] md:text-[25px] leading-loose">{service.title}</h3>
						<p class="text-base md:text-[22px] tracking-tight font-jost text-text-gray leading-[33px] text-center"> {service.text}</p>
						<a href="/services" class="text-text-gray-200 leading-snug text-lg tracking-tight font-jost font-semibold gap-2 py-4 md:py-8 startCenter">Conoce mas...<ArrowSec /></a>
					</div>
				)
			})
		}
	</section>

	<!-- About Section -->

	<section class="w-full lg:max-w-[1200px] mx-auto px-12 xl:px-0 flex flex-col-reverse justify-center items-center lg:grid grid-cols-2 gap-[75px] pt-[100px] lg:pt-[75px]">
		<div class="flex flex-col gap-8 max-w-[472px] items-center lg:items-start py-6">
			<h2 class="text-[30px] text-center capitalize lg:text-left font-dm tracking-wide leading-8 md:leading-[62.50px] md:text-[50px] text-text-blue ">Contruimos lo que necesitas</h2>
			<p class="text-base md:text-[22px] text-center lg:text-left tracking-tight font-jost text-text-gray leading-[33px]">Es muy comun en empresas de desarrollo de software no entregar lo solicitado. Lo haremos diferente.</p>
			<div class="flex gap-4 pt-3 items-center">
				<CallIcon/>
				<p class="flex flex-col text-text-gray-200 font-jost tracking-tight">
					<span class="text-2xl font-bold leading-9 ">+57 3123456789</span>
					<span class="text-[22px] leading-8">No dudes en llamar</span>
				</p>
			</div>
			<a class="ease-in-out duration-300 hover:scale-[1.01]" href="/contact">
				<Button text="Dejanos ayudarte"/>
			</a>
		</div>

		<div >
			<img class="rounded-br-full" src="/main-about.jpg" alt="pensando" />
		</div>
	</section>
	<!-- Projects Section -->

	<section class="lg:max-w-[1200px] px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px] ">
		<h2 class="font-dm tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px] w-full lg:max-w-[50%] pb-2 mx-auto">Nuestros proyectos</h2>
		<p class="text-base md:text-[22px] text-center tracking-tight font-jost text-text-gray leading-[33px] lg:max-w-[60%] mx-auto">A lo largo de nuestro desarrollo profesional y personal hemos podido desarrollar ciertos proyectos.</p>
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-x-[104px] lg:gap-y-[56px] mt-12 lg:mt-[93px]">
			{
			projects.map((proj) => {
				return (
					<a href={proj.link} target="_blank" class="w-full flex flex-col gap-4 ease-in-out duration-300 hover:scale-[1.03] hover:bg-[#fff] rounded-xl p-4">
					<img src={proj.img} alt="projects" class="h-[320px] rounded-xl"/>
							<p class="flex flex-col tracking-tight leading-9">
								<span class="text-primary-200 text-lg lg:text-[25px] font-dm">{proj.name}</span>
								<span class="text-text-gray-200 text-base lg:text-lg font-jost">{proj.text}</span>
							</p>
					</a>
			)
		})
		}
		</div>
	</section>

</MainLayout>
 

<style>

  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
      display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
      -ms-overflow-style: none;  /* IE and Edge */
      scrollbar-width: none;  /* Firefox */
  }

</style>